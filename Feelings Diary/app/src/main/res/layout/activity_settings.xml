<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_img"
    tools:context="com.feelingsdiary.feelingsdiaryscripts.SettingsActivity">

    <TextView
        android:id="@+id/settingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_box"
        android:gravity="center"
        android:padding="15dp"
        android:text="Settings"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/namePrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/grey_box"
        android:gravity="center"
        android:padding="15dp"
        android:text="Enter your name here (12 character limit)"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/nameInput"
        android:layout_width="355dp"
        android:layout_height="51dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="240dp"
        android:background="@drawable/rounded_box"
        android:ems="10"
        android:gravity="start"
        android:inputType= "text"
        android:maxLength="12"
        android:padding="15dp"
        app:backgroundTint="@null">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/schoolPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="320dp"
        android:background="@drawable/grey_box"
        android:gravity="center"
        android:padding="15dp"
        android:text="Enter your school here (20 character limit)"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/schoolInput"
        android:layout_width="355dp"
        android:layout_height="51dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="380dp"
        android:background="@drawable/rounded_box"
        android:ems="10"
        android:gravity="start"
        android:inputType= "text"
        android:maxLength="30"
        android:padding="15dp"
        app:backgroundTint="@null">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/rounded_box"
        android:text="Back" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="272dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/rounded_box"
        android:text="Save" />



</RelativeLayout>