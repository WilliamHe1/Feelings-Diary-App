<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.feelingssdiary">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_NUMBERS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name = "com.android.alarm.permission.SET_ALARM"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FeelingsSDiary">
        <activity
            android:name="com.feelingsdiary.feelingsdiaryscripts.SettingsActivity"
            android:exported="false"
            android:label="@string/title_activity_settings"
            android:theme="@style/Theme.FeelingsSDiary.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.feelingsdiary.feelingsdiaryscripts.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.feelingsdiary.feelingsdiaryscripts.QuizActivity"
            android:exported="true"
            android:theme="@style/Theme.FeelingsSDiary.NoActionBar"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.feelingsdiary.feelingsdiaryscripts.DBTActivity"
            android:exported="true"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name="com.feelingsdiary.feelingsdiaryscripts.DiaryMainActivity"
            android:exported="true"
            android:theme="@style/Theme.FeelingsSDiary.NoActionBar"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.feelingsdiary.feelingsdiaryscripts.AddEntryActivity"
            android:exported="true"
            android:theme="@style/Theme.FeelingsSDiary.NoActionBar"
            android:screenOrientation="portrait">
        </activity>


    </application>

</manifest>